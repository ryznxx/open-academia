generator client {
  provider = "prisma-client" // Tambahkan -js agar standar
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql" // UBAH INI
}

generator prismabox { 
  provider = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName = "t"
  inputModel = true
  output   = "../generated/prismabox"
} 

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String?
}


model Mahasiswa {
  id        String   @id @default(cuid())
  nama      String
  nim       String   @unique
  angkatan  Int
  email     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}